@model List<TatilSeyahatSitesi.Models.Siniflar.blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.blogImage" style="width:300px; height:150px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@x.baslik</h4>
            <span class="doller">@x.tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.baciklama.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetails/@x.blogID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}