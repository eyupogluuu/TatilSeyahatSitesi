@model TatilSeyahatSitesi.Models.Siniflar.blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_adminLayout2.cshtml";
}
<br />
<h2 class="card-header" style="text-align:center; background-color:burlywood; color:aliceblue">Yeni Blok Ekle</h2>
<br />
<form method="post" class="form-group">
    <label>Başlık:</label>
    @Html.TextBoxFor(x => x.baslik, new { @class = "form-control" })
    <br />
    <label>Tarih:</label>
    @Html.TextBoxFor(x => x.tarih, new { @class = "form-control" })
    <br />
    <label>Açıklama:</label>
    @Html.TextBoxFor(x => x.baciklama, new { @class = "form-control" })
    <br />
    <label>Resim Yolu:</label>
    @Html.TextBoxFor(x => x.blogImage, new { @class = "form-control" })
    <br />
    <button class="btn-primary">Kaydet</button>
</form>

